@model AccordionSetUpModel
@if (!string.IsNullOrWhiteSpace(Model.DetailsViewModel.CourseDetails.Description))
{
    @await Html.PartialAsync("CourseAccordionItem", new AccordionViewModel
    {
        Description = Model.DetailsViewModel.CourseDetails.Description,
        Title = "Who this course is for",
        SubText = "Discover the learning experience and opportunities you can expect from this course.",
        SectionName = @Model.Position,
    })
}