@model AccordionSetUpModel
@if (!string.IsNullOrWhiteSpace(Model.SectionText))
{
    @await Html.PartialAsync("CourseAccordionItem", new AccordionViewModel
    {
        Description = Model.SectionText,
        Title = "What you'll learn",
        SubText = "View the key features of this course.",
        SectionName = @Model.Position,
    })
}