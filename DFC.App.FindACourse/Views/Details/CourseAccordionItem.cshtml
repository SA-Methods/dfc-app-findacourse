@model AccordionViewModel
<div class="govuk-accordion__section">
    <div class="govuk-accordion__section-header">
        <h2 class="govuk-accordion__section-heading">
            <button type="button" id="assessed-section-@Model.SectionName" aria-controls="accordion-default-content-@Model.SectionName" class="govuk-accordion__section-button" aria-expanded="false">
                <span id ="accordion-default-heading-@Model.SectionName">@Model.Title</span><span class="govuk-accordion__icon" aria-hidden="true"></span>
            </button>
        </h2>
    </div>
    <div id="accordion-default-content-@Model.SectionName" class="govuk-accordion__section-content" aria-labelledby="assessed-section-@Model.SectionName">
        <p id="Section-Description-@Model.SectionName">@Html.Raw(Model.Description)</p>
    </div>
</div>
